@@implements IDisposable
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">StudSpa</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">

        <!-- HOME -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span>
                Home
            </NavLink>
        </div>

        <AuthorizeView Context="authContext">
            <Authorized>
                <!-- USER NAME -->
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu"></span>
                        @authContext.User.Identity?.Name
                    </NavLink>
                </div>

                <!-- CUSTOMER LINKS -->
                <AuthorizeView Roles="Customer" Context="customerContext">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="customer/book">
                            <span class="bi bi-calendar-plus"></span> Book Appointment
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="customer/appointments">
                            <span class="bi bi-list-check"></span> My Appointments
                        </NavLink>
                    </div>
                </AuthorizeView>

                <!-- ADMIN LINKS (SpaAdmin only) -->
                <AuthorizeView Roles="SpaAdmin" Context="adminContext">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/appointments">
                            <span class="bi bi-clipboard-data"></span> Manage All Appointments
                        </NavLink>
                    </div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/assign-appointments">
                            <span class="bi bi-person-check"></span> Assign Appointments
                        </NavLink>
                    </div>
                </AuthorizeView>

                <!-- SERVICE PROVIDER LINKS -->
                <AuthorizeView Roles="ServiceProvider" Context="providerContext">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="employee/appointments">
                            <span class="bi bi-person-badge"></span> My Assigned Appointments
                        </NavLink>
                    </div>
                </AuthorizeView>

                <!-- LOGOUT -->
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <span class="bi bi-arrow-bar-left-nav-menu"></span>
                            Logout
                        </button>
                    </form>
                </div>

            </Authorized>

            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person-plus"></span> Register
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-box-arrow-in-right"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}


