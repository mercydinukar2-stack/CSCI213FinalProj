@page "/customer/appointments"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Customer")]

@using StudSpa.Models
@using StudSpa.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject ApplicationDbContext Db
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS

<h3>My Appointments</h3>
<hr />

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-success">@message</div>
}

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">@error</div>
}

@if (appointments == null)
{
    <p>Loading appointments...</p>
}
else if (!appointments.Any())
{
    <p>You have no appointments.</p>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Service</th>
                <th>Date & Time</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appt in appointments)
            {
                <tr>
                    <td>@appt.Service.Name</td>
                    <td>@appt.AppointmentDate.ToString("f")</td>
                    <td>
                        <span class="badge @GetStatusBadge(appt.Status)">
                            @appt.Status
                        </span>
                    </td>
                    <td>
                        @if (CanCancel(appt))
                        {
                            <button class="btn btn-sm btn-danger me-1"
                                    disabled="@isProcessing"
                                    @onclick="() => ConfirmCancel(appt.Id)">
                                Cancel
                            </button>
                        }

                        @if (appt.Status == AppointmentStatus.Completed)
                        {
                            <NavLink class="btn btn-sm btn-outline-warning"
                                     href="@($"/customer/review/{appt.Id}")">
                                ⭐ Leave Review
                            </NavLink>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Appointment>? appointments;
    private string? message;
    private string? error;
    private bool isProcessing;

    protected override async Task OnInitializedAsync()
    {
        await LoadAppointments();
    }

    private async Task LoadAppointments()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);

        if (user == null)
            return;

        appointments = await Db.Appointments
            .Include(a => a.Service)
            .Where(a => a.CustomerId == user.Id)
            .OrderByDescending(a => a.AppointmentDate)
            .ToListAsync();
    }

    private bool CanCancel(Appointment appt)
    {
        return (appt.Status == AppointmentStatus.Scheduled
             || appt.Status == AppointmentStatus.Confirmed)
             && appt.AppointmentDate > DateTime.Now;
    }

    private async Task ConfirmCancel(int appointmentId)
    {
        message = null;
        error = null;

        var confirmed = await JS.InvokeAsync<bool>(
            "confirm", "Are you sure you want to cancel this appointment?");

        if (!confirmed)
            return;

        await CancelAppointment(appointmentId);
    }

    private async Task CancelAppointment(int appointmentId)
    {
        isProcessing = true;

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);

        if (user == null)
        {
            error = "User not found.";
            isProcessing = false;
            return;
        }

        var appointment = await Db.Appointments
            .FirstOrDefaultAsync(a =>
                a.Id == appointmentId &&
                a.CustomerId == user.Id);

        if (appointment == null)
        {
            error = "Appointment not found.";
            isProcessing = false;
            return;
        }

        if (!CanCancel(appointment))
        {
            error = "This appointment can no longer be cancelled.";
            isProcessing = false;
            return;
        }

        appointment.Status = AppointmentStatus.Cancelled;
        await Db.SaveChangesAsync();

        message = "Appointment cancelled successfully.";
        isProcessing = false;

        await LoadAppointments();
    }

    private string GetStatusBadge(AppointmentStatus status) => status switch
    {
        AppointmentStatus.Scheduled => "bg-primary",
        AppointmentStatus.Confirmed => "bg-info",
        AppointmentStatus.Completed => "bg-success",
        AppointmentStatus.Cancelled => "bg-secondary",
        AppointmentStatus.NoShow => "bg-warning",
        _ => "bg-dark"
    };
}

