@page "/admin/appointments"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "SpaAdmin")]
@using StudSpa.Models
@using StudSpa.Data
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject ApplicationDbContext Db

<h3>All Appointments (Admin)</h3>
<hr />

@if (appointments == null)
{
    <p>Loading appointments...</p>
}
else if (!appointments.Any())
{
    <p>No appointments found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Service</th>
                <th>Date & Time</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appt in appointments)
            {
                <tr>
                    <td>@appt.CustomerId</td>
                    <td>@appt.Service.Name</td>
                    <td>@appt.AppointmentDate.ToString("g")</td>
                    <td>
                        <span class="badge @GetStatusBadge(appt.Status)">
                            @appt.Status
                        </span>
                    </td>
                    <td>
                        @if (appt.Status == AppointmentStatus.Scheduled)
                        {
                            <button class="btn btn-sm btn-success me-1"
                                    @onclick="() => UpdateStatus(appt.Id, AppointmentStatus.Confirmed)">
                                Confirm
                            </button>
                        }
                        @if (appt.Status == AppointmentStatus.Confirmed)
                        {
                            <button class="btn btn-sm btn-primary me-1"
                                    @onclick="() => UpdateStatus(appt.Id, AppointmentStatus.Completed)">
                                Complete
                            </button>
                        }
                        @if (appt.Status != AppointmentStatus.Cancelled && appt.Status != AppointmentStatus.Completed)
                        {
                            <button class="btn btn-sm btn-danger"
                                    @onclick="() => UpdateStatus(appt.Id, AppointmentStatus.Cancelled)">
                                Cancel
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Appointment>? appointments;

    protected override async Task OnInitializedAsync()
    {
        await LoadAppointments();
    }

    private async Task LoadAppointments()
    {
        appointments = await Db.Appointments
            .Include(a => a.Service)
            .OrderByDescending(a => a.AppointmentDate)
            .ToListAsync();
    }

    private async Task UpdateStatus(int appointmentId, AppointmentStatus status)
    {
        var appt = await Db.Appointments.FindAsync(appointmentId);
        if (appt == null)
            return;

        appt.Status = status;
        await Db.SaveChangesAsync();

        await LoadAppointments();
    }

    private string GetStatusBadge(AppointmentStatus status) => status switch
    {
        AppointmentStatus.Scheduled => "bg-primary",
        AppointmentStatus.Confirmed => "bg-info",
        AppointmentStatus.Completed => "bg-success",
        AppointmentStatus.Cancelled => "bg-secondary",
        AppointmentStatus.NoShow => "bg-warning",
        _ => "bg-dark"
    };
}
